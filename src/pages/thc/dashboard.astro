---
import Layout from "../../layouts/Layout.astro";
import SessionState from "../../components/dashboard/SessionState.vue";
import Radar from "../../components/dashboard/Radar.vue";
import Timeline from "../../components/dashboard/Timeline.vue";
import Notes from "../../components/dashboard/notes/Notes.vue";
import Activity from "../../components/dashboard/Activity.vue";
import NavigationComponent from "../../components/navigation/navBar.vue";
---

<Layout title="Dashboard">
  <body>
    <NavigationComponent client:only />
  </body>
  <container>
    <SessionState client:only="vue" />
    <div class="lg:flex items-center max-w-screen-2xl xl:m-auto">
      <div class="xl:w-4/12 lg:w-5/12 p-2 sm:w-5/6 sm:m-auto">
        <div class="card bg-base-100 shadow-xl my-4">
          <div class="card-body">
            <h2 class="card-title">Radar</h2>
            <Radar client:only />
          </div>
        </div>
      </div>
      <div class="xl:w-8/12 lg:w-7/12 p-2 sm:w-full">
        <div class="card bg-base-100 shadow-xl my-4">
          <div class="card-body">
            <h2 class="card-title">Timeline</h2>
            <Timeline client:only />
          </div>
        </div>
      </div>
    </div>

    <div class="md:flex justify-center">
      <div
        class="card max-w-lg bg-base-100 shadow-xl md:w-2/5 sm:w-full my-4 md:mx-2 m-auto"
      >
        <div class="card-body">
          <h2 class="card-title">Notes</h2>
          <div class="card-actions justify-center">
            <div class="overflow-x-auto">
              <Notes client:only />
            </div>
          </div>
        </div>
      </div>
      <div
        class="card bg-base-100 shadow-xl md:w-3/5 sm:w-full my-4 mx-2 max-w-7xl"
      >
        <div class="card-body">
          <h2 class="card-title">Activity</h2>
          <div class="card-actions justify-center">
            <div class="overflow-x-auto w-full">
              <Activity client:only />
            </div>
          </div>
        </div>
      </div>
    </div>
  </container>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
